    android:padding="8dp">

    <com.smartown.study.scroll.LauncherView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"></com.smartown.study.scroll.LauncherView>

    <com.smartown.study.scroll.LauncherView1
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"></com.smartown.study.scroll.LauncherView1>

    <com.smartown.study.scroll.LauncherView2
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
